	<ItemGroup>
		<Folder Include="Areas\Erp\Models\" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\Presentation\Agile.Web.Framework\Agile.Web.Framework.csproj" />
	</ItemGroup>

